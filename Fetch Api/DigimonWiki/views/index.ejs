<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="...">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <img src="/images/Digimon_Wiki_logo.png" alt="logo" width="150px">
      </div>
    </nav>
    
    <center><h5>Welcome to <%= title %></h5></center>
    <center><a>Cantidad de digimon: </a><a id="leng"></a></center>
    <!-- <center><a>Cantidad de levels: </a><a id="lenglevel"></a></center> -->

    <!-- Buscar Digimon -->
    <div class="row mt-5">
      <div class="col-md-12">
        <div class="form-group">
          <center><input type="text" id="buscarDigimon" placeholder="Buscar un Digimon" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"></center>
          <br>
          <div id="cardResultado" class="card d-none mx-auto my-auto" style="max-width: 300px; max-height: 400px;">
            <img id="img" alt="" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title" id="name" style="color: black;"></h5>
              <p class="card-text" id="level"></p>
            </div>
          </div>
          
        </div>
      </div>
    </div>

    <!-- Tabla con todos los Digimon -->
    <div class="container mt-4 shadow-lg p3 mb-5 bg-body rounded">
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>NAME</th>
            <th>IMG</th>
            <th>LEVEL</th>
          </tr>
        </thead>
        <tbody id="data"></tbody>
      </table>
    </div>

    <script src="/js/obtenerDigimon.js"></script>
    <!-- JS Boostrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="..."></script>
  </body>
</html>
